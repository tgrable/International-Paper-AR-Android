<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.internationalpaper.ip4d.MenuActivity">


    <LinearLayout
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ip4d_logo_transparent"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:id="@+id/imageView"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp"/>

        <Button
            style="@style/IPButton"
            android:text="AR Browser"
            android:id="@+id/btn_ar"
            android:layout_gravity="center_horizontal" />

        <Button
            style="@style/IPButton"
            android:text="Company"
            android:id="@+id/btn_company"
            android:layout_gravity="center_horizontal" />

        <Button
            style="@style/IPButton"
            android:text="Privacy"
            android:id="@+id/btn_privacy"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:textColor="#fff"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="2009-2014 International Paper. All Rights Reserved."
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>
